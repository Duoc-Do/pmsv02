                            if (data.rows != null) {
                                $(WarehouseLineID).val(data.rows.WarehouseID);
                                $(WarehouseLineName).val(data.rows.Name);
                            }
                            else {
                                $thisobject[0].selectize.setValue('');
                                $thisobject[0].selectize.clearOptions();
                            }
