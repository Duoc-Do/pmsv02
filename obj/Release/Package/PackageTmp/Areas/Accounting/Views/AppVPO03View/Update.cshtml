            case "UOMCode":
                var $tr = $thisobject.closest("tr");
                var UOMID = $tr.find('input[fieldname = "UOMID"]').first();

                $(UOMID).val("");

                if (val != "") {

                    $.ajax({
                        type: "GET", url: url, dataType: "json",
                        data: { type: 1, fieldname: fieldname, keyword: val },
                        success: function (data) {
                            if (data.rows != null) {
