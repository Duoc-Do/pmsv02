                $(Percentage).val("");

                var AmountVAT = $tr.find('input[fieldname = "AmountVAT"]').first();
                $(AmountVAT).val("");

                var AmountVATFC = $tr.find('input[fieldname = "AmountVATFC"]').first();
                $(AmountVATFC).val("");

