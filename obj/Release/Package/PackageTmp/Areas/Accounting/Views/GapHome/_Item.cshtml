@model WebApp.Areas.Accounting.Models.AppItemView
@{
    string ajaxstring = string.Format("data-ajax-update=#{0} ", "gaphome_container");
    ajaxstring += "data-ajax-mode=replace ";
    ajaxstring += "data-ajax-method=GET ";
    ajaxstring += string.Format("data-ajax-loading=#{0} ", "ajaxloadingelementid");
    ajaxstring += "data-ajax=true ";

    string urledit = Url.Action("Edit", "AppItemTable", new { area = "Accounting", id = Model.ItemID, action_return = "noaction" });

    string urldelete = Url.Action("Delete", "AppItemTable", new { area = "Accounting", id = Model.ItemID, action_return = "noaction" });

    //string urlfarmview = Url.Action("GetField", "GapHome", new { area = "Accounting", farmid = Model.ItemID });

