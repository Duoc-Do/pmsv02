@model WebApp.Areas.Accounting.Models.AppLoginModel
@using WebApp.Areas.Accounting.Services;
@using WebApp.Models;


@{string idupdate = string.Format("formsubmit_{0}", Model.ServiceId.ToString());}
@using (Ajax.BeginForm("Login2", "AppAccount", new { area = "Accounting" }, new AjaxOptions { UpdateTargetId = idupdate, InsertionMode = InsertionMode.Replace }))
{
    @Html.AntiForgeryToken()
    @Html.bsValidationSummary(false)

    <div class="box-body">
        <div class="panel panel-default">
            <div class="panel-body">

                <div class="form-group">
                    @Html.svHiddenFor(m => m.ServiceId)
                </div>

                <div class="form-group">
                    <label for="UserName" class="control-label">Tên đăng nhập</label>
                    <input name="UserName" type="text" class="form-control" id="UserName" placeholder="Tên đăng nhập">
                    @Html.ValidationMessageFor(m => m.UserName)
                </div>
                <div class="form-group">
                    <label for="Password" class="control-label">Mật khẩu</label>
                    <input name="Password" type="password" class="form-control" id="Password" placeholder="Password">
                    @Html.ValidationMessageFor(m => m.Password)
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Đăng nhập</button>
                </div>

            </div>
        </div>
    </div>

}

