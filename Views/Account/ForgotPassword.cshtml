                            <input name="UserName" type="text" class="form-control" placeholder="Tên người dùng" required autofocus>
                        </div>
                        @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "label label-warning" })
*@

                        <div style="padding-top: 2px;"></div>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-envelope fa-fw"></i></span>
                            <input name="Email" type="text" class="form-control" placeholder="Email" required autofocus>
                        </div>
                        @Html.ValidationMessageFor(m => m.Email, null, new { @class = "label label-warning" })
                        <div style="padding-top: 2px;"></div>
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Gửi lại mật khẩu tạm</button>
                    </div>
                }


            </div>
        </div>
    </div>
