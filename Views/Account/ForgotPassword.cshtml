@model WebApp.Models.ForgotPasswordModel
@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = "_LayoutAccount.cshtml";    
}
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                @using (Html.BeginForm())
                {
                    <div class="panel-body">
                        <div class="text-center">
                            <h2>Quên mật khẩu</h2>
                            Dùng mẫu dưới để lấy lại mật khẩu tạm. 
                        </div>
                        <div style="padding-top: 2px;"></div>
                        <div class="text-center">
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "Yêu cầu mật khẩu tạm không thành công. Xin vui lòng sửa lỗi và thử lại. ")
                        </div>

