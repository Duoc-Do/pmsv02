</head>
<body class="sidebar-mini skin-blue-light">
    <div class="wrapper">

        <header class="main-header">

            <!-- Logo -->
            <a href="/" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini">
                    <img src="@Url.Content("~/Content/themes/Accounting/images/logo_mini.png")" /></span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg">
                    <img style="height: 48px;" src="@Url.Content("~/Content/themes/Accounting/images/logo.png")" /></span>
            </a>

            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top" role="navigation">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <!-- Navbar Right Menu -->
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        @if (User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Quản trị", "Index", "Dashboard", new { area = "Admin" }, null)</li>                        
                        }
                        <li>@Html.ActionLink("Kế toán online", "Index", "Dashboard", new { area = "Accounting" }, null)</li>
                    </ul>
                    @Html.Partial("_UserNav")
                </div>

            </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        @RenderSection("leftsidesidebarsection", required: false)


        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            @*            <section class="content-header">
                <h1>
                    @ViewBag.Title
                </h1>
                                <ol class="breadcrumb">
                    <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
                    <li class="active">Dashboard</li>
                </ol>
            </section>*@

            <!-- Main content -->

            <section class="content">
                <div class="alert alert-success" id="sectioncontentmessage" style="display: none;">
                </div>
                <div class="row">
                    <div id="ajaxloadingelementid">
                        @*Đang xử lí...*@
                    </div>
                    <div class="col-xs-12">
                        <section id="page-body-contain-id">
                            @RenderBody()
                        </section>
                    </div>
                </div>
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <footer class="main-footer">

            <div><strong>Copyright &copy; @DateTime.Now.Year - Sen Việt Application. </strong><a href="javascript:;" onclick="sendpm('52722ae2-ca9e-47fe-98dc-84a7e80d45ac')">Gửi phản hồi</a></div>

        </footer>

        @Html.Partial("_Common")
        <!-- Control Sidebar -->

        <!-- /.control-sidebar -->
        <!-- Add the sidebar's background. This div must be placed
           immediately after the control sidebar -->
        <div class='control-sidebar-bg'></div>

    </div>
    <!-- ./wrapper -->

