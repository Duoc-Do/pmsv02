    <!-- Sparkline -->
    <script src="@Url.Content("~/Content/themes/Accounting/AdminLTE2/plugins/sparkline/jquery.sparkline.min.js")" type="text/javascript"></script>
    <!-- jvectormap -->
    <script src="@Url.Content("~/Content/themes/Accounting/AdminLTE2/plugins/jvectormap/jquery-jvectormap-1.2.2.min.js")" type="text/javascript"></script>
