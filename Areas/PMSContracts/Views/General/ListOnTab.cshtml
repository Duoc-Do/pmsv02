@model IEnumerable<WebApp.Areas.PMSContracts.Models.GeneralModel>

@{
    Layout = null;
}
<div class="box-header">

    @*<i class="fa fa-fw fa-plus"></i>@Html.ActionLink("Create New", "Create")*@

    <div class="box-tools">
        @using (Html.BeginForm("SearchListOnTab", "General", FormMethod.Get))
        {

            <div class="input-group input-group-sm" style="width: 250px;">
               
            @*    @Html.DisplayNameFor(model => model.ContractID)*@
                <input type="text" name="search" class="form-control pull-right" placeholder="Search" id="txtSearch">
                <input type="text" name="id" class="form-control pull-right" placeholder="Search" value="333">

                <div class="input-group-btn">
                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                </div>
            </div>
        }
    </div>
    <br />
</div>

<table class="table table-hover table-bordered" id="contractList">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ContractID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClauseCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClauseContent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OriginalLanguage)
        <th>
            @Html.DisplayNameFor(model => model.ParentId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ContractID)
            </td>
            <td>
                <a href='@Url.Action("Details", "General", new { id = item.Id})' title="View"> @Html.DisplayFor(modelItem => item.ClauseCode)</a>
</td>
            <td>
                @Html.DisplayFor(modelItem => item.ClauseContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OriginalLanguage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
         
                @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
            <td class="text-center">

                <a href='@Url.Action("Edit", "General", new { id = item.Id})' title="Edit">
                    <i class="glyphicon glyphicon-pencil"></i>
                </a>&nbsp;
                <a href='@Url.Action("Details", "General", new { id = item.Id})' title="View">
                    <i class="glyphicon glyphicon-eye-open"></i>
                </a>&nbsp;
                <a href='@Url.Action("Delete", "General", new { id = item.Id})' title="Delete">
                    <i class="glyphicon glyphicon-trash"></i>
                </a>
            </td>
          
        </tr>
    }

</table>
