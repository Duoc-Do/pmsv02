@model WebApp.Areas.PMSContracts.Models.GeneralModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/PMSContracts/Views/Shared/_LayoutPMSContract.cshtml";
}

@section HeaderPage{
    <section class="content-header">
        <h1>
            General page
        </h1>
    </section>
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Edit - @Model.ClauseCode</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form">
            <div class="box-body">

                @Html.HiddenFor(model => model.Id)

                <div class="form-group col-lg-4 col-md-6">
                    @Html.LabelFor(model => model.ContractID)
                    @Html.TextBoxFor(model => model.ContractID, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ContractID)
                </div>

               
                <div class="form-group col-lg-4 col-md-6">
                    @Html.LabelFor(model => model.OriginalLanguage)
                    @Html.TextBoxFor(model => model.OriginalLanguage, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.OriginalLanguage)
                </div>

                <div class="form-group col-lg-4 col-md-6">
                    @Html.LabelFor(model => model.ParentId)
                    @Html.TextBoxFor(model => model.ParentId, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ParentId)
                </div>

                <div class="form-group col-lg-4 col-md-6">
                    @Html.LabelFor(model => model.BookType)
                    @Html.TextBoxFor(model => model.BookType, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.BookType)
                </div>

                <div class="form-group col-lg-4 col-md-6">
                    @Html.LabelFor(model => model.CreationDate)
                    @Html.TextBoxFor(model => model.CreationDate, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CreationDate)
                </div>

                <div class="form-group col-lg-4 col-md-6">
                    @Html.LabelFor(model => model.Type)
                    @Html.TextBoxFor(model => model.Type, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Type)
                </div>
                <div class="form-group col-lg-12 col-md-12">
                    @Html.LabelFor(model => model.ClauseCode)
                    @Html.TextAreaFor(model => model.ClauseCode, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ClauseCode)
                </div>

                <div class="form-group col-lg-12 col-md-12">
                    @Html.LabelFor(model => model.ClauseContent)
                    @Html.TextAreaFor(model => model.ClauseContent, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ClauseContent)
                </div>

            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-default">Back to List</button>
                <button type="submit" class="btn btn-info">Save</button>
            </div>
        </form>
    </div>
}



