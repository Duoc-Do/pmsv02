@model IEnumerable<WebApp.Areas.PMSContracts.Models.ParticularModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/PMSContracts/Views/Shared/_LayoutPMSContract.cshtml";
}
@section HeaderPage{
    <section class="content-header">
        <h1>
            Particular page
        </h1>
    </section>
}

<div class="box box-primary">
    <div class="box-header" id="createbox">
        <i class="fa fa-fw fa-plus"></i>@Html.ActionLink("Create New", "Create")
    </div>
    <div class="box-body table-responsive">

        <div class="fr-list">
            <div id="listdata">
                <table class="table table-hover table-bordered" id="contractList">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.GeneralId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ParentId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ClauseCode)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ClauseContent)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.OriginalLanguage)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CreationDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Type)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.GeneralId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ParentId)
                            </td>
                            <td>
                                @*@Html.DisplayFor(modelItem => item.ClauseCode)*@
                                <a href='@Url.Action("Details", "Particular", new { id = item.ParticularId})' title="View"> @Html.DisplayFor(modelItem => item.ClauseCode)</a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ClauseContent)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OriginalLanguage)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreationDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Type)
                            </td>
                            <td class="text-center">

                                <a href='@Url.Action("Edit", "Particular", new { id = item.ParticularId})' title="Edit">
                                    <i class="glyphicon glyphicon-pencil"></i>
                                </a>&nbsp;
                                @*<a href='@Url.Action("Details", "Particular", new { id = item.ParticularId})' title="View">
                                    <i class="glyphicon glyphicon-eye-open"></i>
                                </a>&nbsp;*@
                                <a href='@Url.Action("Delete", "Particular", new { id = item.ParticularId})' title="Delete">
                                    <i class="glyphicon glyphicon-trash"></i>
                                </a>
                            </td>
                        </tr>
                        }
                    </tbody>
                    <tfoot></tfoot>
                </table>
            </div>
        </div>

    </div>
</div>