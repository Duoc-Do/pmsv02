<div id="loading"></div>
<script>
    var loadpg = document.getElementById('loadingmore');
    var scwindow = document.querySelector('html');
    var _inCallback = 1;
    var pagenumber = 1;

    loadpg.addEventListener('click', function () {
        loadContracts();
    }, false);

    function loadContracts() {
        $('div#loading').empty();
     
        pagenumber++;
        var _inCallback = 2;
        $('div#loading').html('<p>Loading...</p>');
        $.get("Contract/Contract?page=" + pagenumber + "&pagesize=pagenumber&isjson=2", function (data) {
            //alert(data);
            if (data != '') {
                $("#contractList tbody").append(data);
            }
            else {
                pagenumber = -1;
            }
            _inCallback = 1;
            $('div#loading').empty();
        });
    }

    window.addEventListener('scroll', function (e) {
        if ($(window).scrollTop() == $(document).height() - $(window).height()) {
            loadContracts();
        }
    });
</script>
