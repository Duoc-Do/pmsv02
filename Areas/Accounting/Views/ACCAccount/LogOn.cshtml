@model SenViet.Models.LogOnModel
@{
    ViewBag.Title = "Đăng nhập";
    if (IsAjax)
    {
        Layout = "";
    }
    
}

@{
    var returnUrl = "";
    if (Request.Params["returnUrl"] != null)
    {
        returnUrl = Request.Params["returnUrl"];
    }
    else
    {
        returnUrl = Request.Path;
    }
}

<h2>
    Đăng nhập</h2>
<p>
    Xin vui lòng nhập tên đăng nhập và mật khẩu của bạn. @Html.ActionLink("Đăng ký", "Register", new { area = "", returnUrl = @returnUrl }, new { @class = "btn2", style = "margin-top:-6px;" })
    nếu bạn không có tài khoản.
</p>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@Html.ValidationSummary(true, "Đăng nhập không thành công. Xin vui lòng nhập chính xác và thử lại.")
@using (Html.BeginForm())
{
    <div>

            <div class="editor-label">
                @Html.LabelFor(m => m.UserName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <div class="editor-label">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </div>
            <p>
                                    <button class="btn2" onclick="$(this).closest('form').submit();">
                    Đăng nhập </button>
            </p>
            <br />
            <p>
                @Html.ActionLink("Quên mật khẩu? ", "ForgotPassword")
            </p>
        
    </div>
}
