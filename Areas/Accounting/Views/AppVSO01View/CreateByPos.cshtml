@model int
@using WebApp.Areas.Accounting.Services
@{
    ((Dictionary<string, string>)ViewBag.ajaxoption)["action-return"] = "Index";
    Dictionary<string, string> ajaxoption = (Dictionary<string, string>)ViewBag.ajaxoption;

    ViewBag.Title = "Xuất bán từ POS online";

    var datefrom = DateTime.Today;
    var dateto = DateTime.Today;

    var Voucherdate = DateTime.Today;

    string CustomerCode = (string)ViewBag.CustomerCode;
    string DisplayNumber = (string)ViewBag.DisplayNumber;
    string Description = (string)ViewBag.Description;
    
    
}
<section id="@(ajaxoption["ajaxupdateid"])">
    <div class="box box-primary">
        @Html.Partial("_HeaderEdit")

        @using (@Ajax.BeginForm(new AjaxOptions { LoadingElementId = ajaxoption["ajaxloadingid"], InsertionMode = InsertionMode.Replace, UpdateTargetId = ajaxoption["ajaxupdateid"] }))
        {   
            <div class="box-body">
                @Html.AntiForgeryToken()
                @Html.bsValidationSummary(false)

                <input id="createtype" name="createtype" type="hidden"  value ="@Model" />
                @*<p class="text-success">@ViewBag.FcNextYearMessage</p>*@

                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="row-fluid">

                            <div class="row">

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="DateFrom" class="control-label">Ngày chứng từ</label>
                                        <input class="form-control text-date" id="VoucherDate" name="VoucherDate" type="text" value="@(Voucherdate.ToShortDateString())" />
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="VoucherNumber" class="control-label">Khách hàng ngầm định</label>
                                        <select data-selectontab="false" fieldname="CustomerCode" isautocomplete="isautocomplete" class="form-control" id="CustomerCode" name="CustomerCode">
                                            <option value="@CustomerCode">@CustomerCode</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="VoucherNumber" class="control-label">Tài khoản nợ ngầm định</label>
                                        <select data-selectontab="false" fieldname="DisplayNumber" isautocomplete="isautocomplete" class="form-control" id="DisplayNumber" name="DisplayNumber">
                                            <option value="@DisplayNumber">@DisplayNumber</option>
                                        </select>
                                    </div>
                                </div>

                            </div>
                                                        <div class="row">
                                <div class="col-md-12">
                                                                        <div class="form-group">
                                        <label for="Description" class="control-label">Diễn giải</label>
                                        <input class="form-control" id="Description" name="Description" type="text" value="@(Description)" />
                                    </div>
                                    </div>
                                                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="DateFrom" class="control-label">Từ ngày</label>
                                        <input class="form-control text-date" id="DateFrom" name="DateFrom" type="text" value="@(datefrom.ToShortDateString())" />
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="DateTo" class="control-label">Đến ngày</label>
                                        <input class="form-control text-date" id="DateTo" name="DateTo" type="text" value="@(dateto.ToShortDateString())" />
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary">Thực hiện</button>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        }
        @Html.Partial("_FooterEdit")
    </div>
</section>

@Scripts.Render("~/bundles/accapp")


<script type="text/javascript">
    $(function () {
        //$.datepicker.setDefaults($.datepicker.regional["vi"]);
        //$("#DateFrom").datepicker($.datepicker.regional["vi"]);
        //$("#DateTo").datepicker($.datepicker.regional["vi"]);

        $('#DateFrom').datetimepicker({
            locale: 'vi'
        });
        $('#DateTo').datetimepicker({
            locale: 'vi'
        });

    });

</script>
